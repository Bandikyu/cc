<%- include("../partials/head.ejs") %>
  <%- include("../partials/nav.ejs") %>
    <div class="container">
      <h1>Editar articulo</h1>
      <form action="/posts/<%= post.id %>/update?_method=PUT" method="post">
        <div class="mb-3 row">
          <label for="titulo" class="col-sm-2 col-form-label">Titulo</label>
          <div class="col-sm-10">
            <input value="<%= post.titulo %>" type="text" class="form-control" name="titulo" id="titulo"
              aria-describedby="helpTitulo">
          </div>
        </div>
        <div class="mb-3 row">
          <label class="col-sm-2 col-form-label" for="imagen">Imagen</label>
          <div class="col-sm-10">
            <input type="file" class="form-control" name="imagen" id="imagen">
          </div>
        </div>
        <div class="mb-3 row">
          <label class="col-sm-2 col-form-label" for="contenido2">Contenido</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="contenido" id="contenido2"
              style="height: 100px"><%= post.contenido %></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
<%- include("../partials/footer.ejs") %>